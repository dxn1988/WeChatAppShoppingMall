.banner {
  padding-top: 40rpx;
  width: 100%;
  height: 200rpx;
  flex-direction: column;
}

.row {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
}

.avatar {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10px;
  border-radius: 4px;
  border: 1px solid #BDBDBD;
}

.nickname {
  display: block;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
}