<view class="wrapper">
  <view wx:for="{{items}}" wx:key="id" class="item-box" bindtap="gotoDetail" data-id="{{item.id}}">
    <view class="item-top">
      <image src="{{item.img}}" mode="aspectFill"></image>
      <view class="item-name">
        <text>{{item.name}}</text>
      </view>
    </view>
    <view class="item-middle">
      <view>团购价 ￥{{item.price}} / {{item.unit}}</view>
      <view class="add-to-cart-box" bindtap="addToCart" data-id="{{item.id}}">
        <view class="add-btn">
          <image src="../../../images/icon/add.png" mode="aspectFill"></image>
        </view>
        <text>加入购物车</text>
      </view>
    </view>
    <view class="item-bottom">
      <view class="item-desc">{{item.desc}}</view>
    </view>
  </view>
</view>
