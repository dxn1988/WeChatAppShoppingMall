/* pages/mall/index/index.wxss */
.wrapper {
  padding: 0;
  background-color: #EFEFF4;
}

.item-box {
  background-color: white;
  margin-bottom: 16px;
}

.item-box:last-child {
  margin-bottom: 0;
}

.item-top {
  position: relative;
  height: 160px;
  width: 100%;
  /* box-sizing: border-box; */
}

.item-top image {
  height: 160px;
  width: 100%;
  z-index: -1;
}

.item-name {
  width: 100%;
  padding: 0 10px 0 10px;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 15px;
  height: 40px;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  color: white;
  line-height: 40px;
  font-weight: bold;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.item-middle {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-to-cart-box {
  display: flex;
  align-items: center;
  font-size: 15px;
}

.add-to-cart-box text:hover {
  color: #4CAF50;
  border-bottom: 1px dashed #66BB6A;
}

.add-btn {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1px solid #4CAF50;
  background-color: #66BB6A;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-right: 4px;
}

.add-btn image {
  width: 18px;
  height: 18px;
}

.item-bottom {
  padding: 0 10px 10px 10px;
}

.item-desc {
  color: #607D8B;
  max-height: 60px;
  font-size: 14px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
}
